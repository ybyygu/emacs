  (defun my-skeleton-pair-end (arg)
    "Skip the char if it is an ending, otherwise insert it."
    (interactive "*p")
    (let ((char last-command-char))
      (if (and (assq char my-skeleton-pair-alist)
               (eq char (following-char)))
